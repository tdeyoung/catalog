
<div class="search">
<p id="notice"><%= notice %></p>

<h1>Search for Music</h1>

<%= form_tag search_items_path, :method => :get do %>
<p>
	<%= text_field_tag :query, params[:query] %> <%= submit_tag "Search!" %>
</p>
<% end %>

<%= form_tag(search_items_path, :method => :get do, id: "search-form") do %>
  <%= text_field_tag :query, params[:query], placeholder: "Search for a title or composer", autofocus: true %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

</div>