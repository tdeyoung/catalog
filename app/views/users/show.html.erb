<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
      <h1>
        <%= @user.name %>
      </h1>
      <% if logged_in? and has_district?(@user) %>
      <h3>
        <%= @user.district.title %></br>
      	<%= @user.email %></br>
      	 <% if @user.admin %>
          <h4>You are an administrator</h4>
        <% end %>

      </h3>
        <%= link_to 'Update profile', edit_user_path, class: "btn btn-warning" %>

      <% end %>
      <%= link_to 'Back', :back, class: "btn btn-success" %>
  </div>
</div>
