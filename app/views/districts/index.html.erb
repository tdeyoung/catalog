<h1>Listing Districts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Contact person</th>
      <th>Contact phone</th>
      <th>Contact email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.title %></td>
        <td><%= district.contact_person %></td>
        <td><%= district.contact_phone %></td>
        <td><%= district.contact_email %></td>
        <td><%= link_to 'Show', district %></td>
        <td><%= link_to 'Edit', edit_district_path(district) %></td>
        <td><%= link_to 'Destroy', district, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

